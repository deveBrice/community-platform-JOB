{% extends 'base.html.twig' %}
{% block title %}Review index{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/content_index.css') }}" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Raleway:500&display=swap" rel="stylesheet">
{% endblock %}
{% block body %}
<div class="container-fluid pl-0">
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-8 offset-lg-2">
                    <div class="body-container">
                        {% if reviews is empty %}
                            <div class="error-no-records">
                                <div class="alert alert-danger error-message" role="alert">
                                    <p>no records found</p>
                                </div>
                            </div>
                        {% endif %}
                        <div class="linear-gradient-review">
                            <h4>Review content list</h4>
                        </div>
                        <div class="table-fixed">
                            <table class="table table-striped">
                                <thead class="thead-dark">
                                <tr>
                                    <th>Id</th>
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th>actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for content in reviews %}
                                    <tr>
                                        <td>{{ content.id }}</td>
                                        <td>{{ content.title }}</td>
                                        <td>{{ content.description }}</td>
                                        <td>{{ content.state }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endblock %}
